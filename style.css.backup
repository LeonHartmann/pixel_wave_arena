:root {
    --bg-color: #111;
    --text-color: #eee;
    --accent-color: #0f0; /* Retro Green */
    --danger-color: #f00;
    --gold-color: #ffd700;
    --scanline-color: rgba(0, 0, 0, 0.5);
    --font-main: 'Press Start 2P', cursive;
}

* {
    box-sizing: border-box;
    user-select: none;
}

body {
    margin: 0;
    padding: 0;
    background-color: #000;
    color: var(--text-color);
    font-family: var(--font-main);
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

#game-container {
    position: relative;
    width: 100vw;
    height: 100vh;
    max-width: none;
    max-height: none;
    background-color: var(--bg-color);
    border: none;
    box-shadow: none;
}

canvas {
    display: block;
    width: 100%;
    height: 100%;
    image-rendering: pixelated; /* Critical for pixel art look */
}

/* CRT Effect Overlay */
#crt-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: linear-gradient(rgba(18, 16, 16, 0) 50%, 
                rgba(0, 0, 0, 0.25) 50%), linear-gradient(90deg, 
                rgba(255, 0, 0, 0.06), 
                rgba(0, 255, 0, 0.02), 
                rgba(0, 0, 255, 0.06));
    background-size: 100% 2px, 3px 100%;
    pointer-events: none;
    z-index: 999;
}

/* UI Layers */
#ui-layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    padding: 20px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.hud-item {
    margin-bottom: 10px;
    text-shadow: 2px 2px #000;
}

#hud-top {
    display: flex;
    justify-content: space-between;
    width: 100%;
}

#gold-display {
    color: var(--gold-color);
}

/* In-Game Stats Panel */
#hud-stats {
    position: absolute;
    left: 20px;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.7);
    border: 2px solid var(--accent-color);
    border-radius: 4px;
    padding: 12px;
    min-width: 140px;
    backdrop-filter: blur(5px);
}

.hud-stats-title {
    font-size: 10px;
    color: var(--accent-color);
    text-align: center;
    margin-bottom: 8px;
    border-bottom: 1px solid var(--accent-color);
    padding-bottom: 4px;
    text-shadow: 2px 2px #000;
}

.hud-stat-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 4px;
    font-size: 8px;
}

.hud-stat-label {
    color: #aaa;
    text-shadow: 1px 1px #000;
}

.hud-stat-value {
    color: var(--accent-color);
    font-weight: bold;
    text-shadow: 1px 1px #000;
    min-width: 50px;
    text-align: right;
}

/* Shop Layer */
#shop-layer {
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(10px);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 20;
}

#shop-layer h2 {
    font-size: 48px;
    color: #f1c40f;
    text-shadow: 4px 4px 0 #000;
    margin-bottom: 10px;
    animation: pulse 2s infinite;
}

#shop-layer p {
    font-size: 18px;
    color: #fff;
    margin-bottom: 40px;
    opacity: 0.8;
}

#auto-select-container {
    margin-top: 30px;
    padding: 15px 25px;
    background: rgba(0, 0, 0, 0.5);
    border: 2px solid #555;
    border-radius: 8px;
}

.auto-select-label {
    display: flex;
    align-items: center;
    gap: 10px;
    cursor: pointer;
    font-size: 12px;
    color: #aaa;
    user-select: none;
}

.auto-select-label:hover {
    color: var(--accent-color);
}

#auto-select-checkbox {
    width: 20px;
    height: 20px;
    cursor: pointer;
    accent-color: var(--accent-color);
}

.auto-select-label span {
    text-shadow: 2px 2px #000;
}

#upgrade-cards {
    display: flex;
    gap: 30px;
    perspective: 1000px;
}

.upgrade-card {
    width: 240px;
    height: 340px;
    background: rgba(20, 20, 20, 0.95);
    border: 2px solid #444;
    border-radius: 12px;
    padding: 20px 15px 50px 15px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    position: relative;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
}

.upgrade-card:hover {
    transform: translateY(-10px) scale(1.05);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.6);
    border-color: #fff;
}

/* Rarity Styles for In-Game Shop */
.upgrade-card.common { border-color: #95a5a6; box-shadow: 0 0 10px rgba(149, 165, 166, 0.2); }
.upgrade-card.rare { border-color: #3498db; box-shadow: 0 0 15px rgba(52, 152, 219, 0.3); }
.upgrade-card.epic { border-color: #9b59b6; box-shadow: 0 0 20px rgba(155, 89, 182, 0.4); }
.upgrade-card.legendary { border-color: #f1c40f; box-shadow: 0 0 25px rgba(241, 196, 15, 0.5); animation: legendaryGlow 3s infinite alternate; }

.upgrade-card .pixel-icon {
    width: 32px;
    height: 32px;
    margin-bottom: 15px;
    image-rendering: pixelated;
    filter: drop-shadow(0 4px 4px rgba(0, 0, 0, 0.5));
}

.upgrade-card h3 {
    font-size: 9px;
    margin-bottom: 10px;
    color: #fff;
    text-transform: uppercase;
    letter-spacing: 1px;
    line-height: 1.4;
    min-height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.upgrade-card.common h3 { color: #bdc3c7; }
.upgrade-card.rare h3 { color: #3498db; }
.upgrade-card.epic h3 { color: #9b59b6; }
.upgrade-card.legendary h3 { color: #f1c40f; }

.upgrade-card p {
    font-size: 7px;
    line-height: 1.5;
    color: #ccc;
    margin-bottom: auto;
    padding: 0 5px;
}

.upgrade-card .rarity-badge {
    position: absolute;
    bottom: 15px;
    font-size: 10px;
    padding: 6px 14px;
    border-radius: 4px;
    text-transform: uppercase;
    font-weight: bold;
    letter-spacing: 1px;
    background: rgba(255, 255, 255, 0.05);
}

.upgrade-card.common .rarity-badge { color: #bdc3c7; background: rgba(189, 195, 199, 0.1); }
.upgrade-card.rare .rarity-badge { color: #3498db; background: rgba(52, 152, 219, 0.1); }
.upgrade-card.epic .rarity-badge { color: #9b59b6; background: rgba(155, 89, 182, 0.1); }
.upgrade-card.legendary .rarity-badge { color: #f1c40f; background: rgba(241, 196, 15, 0.1); }

@keyframes legendaryGlow {
    0% { box-shadow: 0 0 20px rgba(241, 196, 15, 0.4); border-color: #f1c40f; }
    100% { box-shadow: 0 0 40px rgba(241, 196, 15, 0.8); border-color: #fff; }
}

/* Game Over Layer */
#gameover-layer {
    background: rgba(50, 0, 0, 0.9);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 30;
}

/* Pause Layer */
#pause-layer {
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(10px);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 40;
}

#pause-layer h2 {
    font-size: 48px;
    color: var(--accent-color);
    text-shadow: 4px 4px 0 #000;
    margin-bottom: 40px;
    animation: pulse 2s infinite;
}

.pause-menu {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-bottom: 30px;
}

.pause-menu button {
    min-width: 250px;
}

.pause-hint {
    font-size: 10px;
    color: #666;
    margin-top: 20px;
}

@keyframes pulse {
    0%, 100% {
        opacity: 1;
        transform: scale(1);
    }
    50% {
        opacity: 0.8;
        transform: scale(1.05);
    }
}

/* World Selection */
.world-card {
    width: 200px;
    height: 320px;
    background: rgba(20, 20, 20, 0.9);
    border: 2px solid #444;
    border-radius: 8px;
    padding: 15px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    text-align: center;
    cursor: pointer;
    transition: transform 0.2s, border-color 0.2s, box-shadow 0.2s;
    position: relative;
    gap: 10px;
}

.world-card:hover:not(.locked) {
    transform: scale(1.05);
    border-color: var(--accent-color);
    box-shadow: 0 0 20px rgba(15, 255, 15, 0.3);
}

.world-card.locked {
    opacity: 0.5;
    cursor: not-allowed;
    filter: grayscale(1);
}

.world-preview {
    width: 160px;
    height: 160px;
    image-rendering: pixelated;
    border: 2px solid #555;
    border-radius: 4px;
    margin-bottom: 5px;
}

.world-card:not(.locked) .world-preview {
    border-color: var(--accent-color);
}

.world-card h3 {
    font-size: 12px;
    margin: 0;
    color: #fff;
    text-shadow: 2px 2px #000;
}

.world-card p {
    font-size: 9px;
    color: #aaa;
    margin: 0;
}

.world-status {
    margin-top: auto;
    font-size: 9px;
    font-weight: bold;
    padding: 5px 10px;
    border-radius: 4px;
    background: #333;
    width: 100%;
}

.world-status.active {
    color: var(--accent-color);
    background: rgba(15, 255, 15, 0.1);
}

.world-status.completed {
    color: #f1c40f;
    background: rgba(241, 196, 15, 0.2);
}

/* Leaderboard */
#leaderboard-list {
    width: 600px;
    max-height: 500px;
    overflow-y: auto;
    padding: 20px;
    background: rgba(0, 0, 0, 0.5);
    border: 2px solid var(--accent-color);
    border-radius: 8px;
    margin: 20px 0;
}

#leaderboard-list::-webkit-scrollbar {
    width: 8px;
}

#leaderboard-list::-webkit-scrollbar-track {
    background: #111;
}

#leaderboard-list::-webkit-scrollbar-thumb {
    background-color: var(--accent-color);
    border-radius: 4px;
}

.no-scores {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 60px 20px;
    color: #666;
}

.no-scores-icon {
    font-size: 64px;
    margin-bottom: 20px;
    opacity: 0.5;
}

.no-scores p {
    font-size: 12px;
    margin: 5px 0;
}

.no-scores-hint {
    font-size: 8px !important;
    color: #555 !important;
}

.leaderboard-row {
    display: grid;
    grid-template-columns: 60px 1fr 100px 80px;
    gap: 15px;
    align-items: center;
    padding: 15px;
    margin-bottom: 10px;
    background: rgba(20, 20, 20, 0.8);
    border: 2px solid #333;
    border-left-width: 4px;
    border-radius: 6px;
    transition: all 0.2s;
}

.leaderboard-row:hover {
    background: rgba(40, 40, 40, 0.9);
    border-color: var(--accent-color);
    transform: translateX(5px);
}

/* Top 3 special styling */
.leaderboard-row.rank-1 {
    border-left-color: #f1c40f;
    background: linear-gradient(90deg, rgba(241, 196, 15, 0.1) 0%, rgba(20, 20, 20, 0.8) 100%);
}

.leaderboard-row.rank-2 {
    border-left-color: #bdc3c7;
    background: linear-gradient(90deg, rgba(189, 195, 199, 0.1) 0%, rgba(20, 20, 20, 0.8) 100%);
}

.leaderboard-row.rank-3 {
    border-left-color: #e67e22;
    background: linear-gradient(90deg, rgba(230, 126, 34, 0.1) 0%, rgba(20, 20, 20, 0.8) 100%);
}

.lb-rank {
    display: flex;
    align-items: center;
    justify-content: center;
}

.rank-medal {
    font-size: 32px;
}

.rank-number {
    font-size: 16px;
    font-weight: bold;
    color: #666;
}

.lb-player {
    font-size: 12px;
    font-weight: bold;
    color: var(--accent-color);
    text-transform: uppercase;
    text-shadow: 2px 2px #000;
}

.lb-wave {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
}

.lb-wave-label {
    font-size: 7px;
    color: #666;
}

.lb-wave-value {
    font-size: 20px;
    font-weight: bold;
    color: var(--accent-color);
    text-shadow: 2px 2px #000;
}

.lb-date {
    font-size: 9px;
    color: #888;
    text-align: right;
}

/* Screens (Menu, Shop, GameOver) */
.screen {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.85);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    z-index: 10;
    transition: opacity 0.3s;
}

.hidden {
    opacity: 0;
    pointer-events: none;
}

.active {
    opacity: 1;
    pointer-events: auto;
}

h1 {
    font-size: 48px;
    color: var(--accent-color);
    text-shadow: 4px 4px #000;
    margin-bottom: 40px;
}

h2 {
    font-size: 32px;
    margin-bottom: 20px;
}

.red-text {
    color: var(--danger-color);
}

button {
    background: transparent;
    border: 2px solid var(--text-color);
    color: var(--text-color);
    font-family: var(--font-main);
    padding: 15px 30px;
    font-size: 16px;
    cursor: pointer;
    margin-top: 20px;
    transition: all 0.2s;
}

button:hover {
    background: var(--text-color);
    color: #000;
    transform: scale(1.05);
}

/* General Menu Buttons */
.menu-btn {
    /* Base button styles already applied to 'button' tag, can add specifics here */
}

.menu-buttons {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.menu-btn.small {
    padding: 10px 20px;
    font-size: 12px;
    margin-top: 0;
}


/* --- New Armory Styles --- */

/* Armory Layout */
#armory-content {
    display: flex;
    gap: 30px;
    max-width: 1200px;
    width: 90%;
    height: 60vh;
}

/* Character Preview Section */
#armory-character {
    width: 300px;
    background: rgba(20, 20, 20, 0.9);
    border: 2px solid #444;
    border-radius: 8px;
    padding: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
}

#armory-character h3 {
    font-size: 14px;
    color: var(--accent-color);
    text-shadow: 2px 2px #000;
    margin: 0;
}

#character-preview {
    width: 128px;
    height: 128px;
    background: rgba(0, 0, 0, 0.5);
    border: 2px solid #555;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

#character-canvas {
    image-rendering: pixelated;
}

#character-stats {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.stat-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 6px 10px;
    background: rgba(0, 0, 0, 0.4);
    border-left: 3px solid var(--accent-color);
    border-radius: 2px;
}

.stat-label {
    font-size: 9px;
    color: #aaa;
    text-transform: uppercase;
}

.stat-value {
    font-size: 10px;
    color: var(--accent-color);
    font-weight: bold;
    text-shadow: 1px 1px #000;
}

/* Armory Right Side */
#armory-right {
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

/* Filter Buttons */
#armory-filter {
    display: flex;
    gap: 10px;
    margin-bottom: 20px;
}

#armory-filter button {
    background: rgba(0, 0, 0, 0.6);
    border: 1px solid #555;
    color: #888;
    transition: all 0.2s ease;
    text-shadow: none;
}

#armory-filter button:hover {
    border-color: #fff;
    color: #fff;
}

#armory-filter button.active-filter {
    background: var(--accent-color);
    color: #000;
    border-color: var(--accent-color);
    box-shadow: 0 0 15px var(--accent-color);
    font-weight: bold;
    transform: scale(1.05);
}

/* Armory Grid */
#armory-upgrades {
    /* Scrollbar styling */
    scrollbar-width: thin;
    scrollbar-color: var(--accent-color) #111;
}

#armory-upgrades::-webkit-scrollbar {
    width: 8px;
}

#armory-upgrades::-webkit-scrollbar-track {
    background: #111;
}

#armory-upgrades::-webkit-scrollbar-thumb {
    background-color: var(--accent-color);
    border-radius: 4px;
}

/* Armory Card */
.armory-card {
    background: linear-gradient(135deg, rgba(20, 20, 20, 0.9) 0%, rgba(40, 40, 40, 0.9) 100%);
    border: 2px solid #444;
    border-left-width: 6px; /* Accent bar on left */
    border-radius: 4px;
    padding: 15px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: transform 0.2s, box-shadow 0.2s, background 0.2s;
    position: relative;
    overflow: hidden;
    cursor: pointer; /* Card is a button */
}

.armory-card:hover:not(.disabled) {
    transform: translateX(5px);
    background: linear-gradient(135deg, rgba(40, 40, 40, 0.95) 0%, rgba(60, 60, 60, 0.95) 100%);
}

/* Disabled State */
.armory-card.disabled {
    opacity: 0.5;
    cursor: not-allowed;
    filter: grayscale(0.8);
}

.armory-card.disabled:hover {
    transform: none; /* No movement on hover if disabled */
}

/* Rarity Colors */
.armory-card.common { border-color: #bdc3c7; border-left-color: #bdc3c7; }
.armory-card.rare { border-color: #3498db; border-left-color: #3498db; }
.armory-card.epic { border-color: #9b59b6; border-left-color: #9b59b6; }
.armory-card.legendary { border-color: #f1c40f; border-left-color: #f1c40f; }

.armory-card.legendary {
    box-shadow: 0 0 10px rgba(241, 196, 15, 0.1);
}

/* Card Content */
.card-info {
    display: flex;
    flex-direction: column;
    gap: 5px;
    flex: 1;
}

.card-header {
    display: flex;
    align-items: baseline;
    gap: 10px;
}

.card-title {
    font-size: 14px;
    font-weight: bold;
    color: #fff;
    text-transform: uppercase;
}

.armory-card.common .card-title { color: #bdc3c7; }
.armory-card.rare .card-title { color: #3498db; }
.armory-card.epic .card-title { color: #9b59b6; }
.armory-card.legendary .card-title { color: #f1c40f; text-shadow: 0 0 5px rgba(241, 196, 15, 0.5); }

.card-level {
    font-size: 10px;
    color: #666;
    font-family: sans-serif; /* Cleaner font for numbers */
    font-weight: bold;
    background: #111;
    padding: 2px 6px;
    border-radius: 4px;
}

.card-desc {
    font-size: 10px;
    color: #aaa;
    line-height: 1.4;
}

/* Price Display */
.card-price {
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--gold-color);
    font-weight: bold;
    font-size: 16px;
    text-shadow: 2px 2px 0 #000;
    min-width: 80px;
    justify-content: flex-end;
}

.coin-icon {
    width: 20px;
    height: 20px;
    filter: drop-shadow(2px 2px 0 #000);
}

.armory-buy-btn:hover:not(:disabled) {
    background: var(--accent-color);
    color: #000;
    border-color: var(--accent-color);
    transform: scale(1.05);
}

.armory-buy-btn:hover:not(:disabled) .cost {
    color: #000;
}

.armory-buy-btn:disabled {
    border-color: #333;
    color: #555;
    cursor: not-allowed;
    opacity: 0.7;
}

.armory-buy-btn:disabled .cost {
    color: #555;
}

/* Rarity specific button borders on hover/default */
.armory-card.common .armory-buy-btn:not(:disabled) { border-color: #bdc3c7; }
.armory-card.rare .armory-buy-btn:not(:disabled) { border-color: #3498db; }
.armory-card.epic .armory-buy-btn:not(:disabled) { border-color: #9b59b6; }
.armory-card.legendary .armory-buy-btn:not(:disabled) { border-color: #f1c40f; }